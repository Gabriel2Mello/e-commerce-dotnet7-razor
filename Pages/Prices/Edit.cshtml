@page
@model e_commerce.Pages_Prices.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Price</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Price.Id" />
            <div class="form-group">
                <label asp-for="Price.Value" class="control-label"></label>
                <input asp-for="Price.Value" class="form-control" />
                <span asp-validation-for="Price.Value" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price.StartDate" class="control-label"></label>
                <input asp-for="Price.StartDate" class="form-control" />
                <span asp-validation-for="Price.StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price.EndDate" class="control-label"></label>
                <input asp-for="Price.EndDate" class="form-control" />
                <span asp-validation-for="Price.EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price.ProductId" class="control-label"></label>
                <select asp-for="Price.ProductId" class="form-control" asp-items="ViewBag.ProductId"></select>
                <span asp-validation-for="Price.ProductId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

